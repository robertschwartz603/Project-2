

<div class="container">
  <div class="row h-100">
    <!--login form-->
    <div class="col-sm-5 col-md-5 mx-auto d-table h-100">
      <div class="text-center mt-4">
        <h1>Login</h1>
        <hr>
      </div>

      <div class="card bg-dark">
        <div class="card-body">
          <div class="mt-sm-4 mx-sm-4">
            <form class="login-form">
              <div class="form-group pb-2" id="l-form">
                <label for="email-login" class="text-light">Email:</label>
                <input class="form-control form-control-sm entry-field" type="text" id="email-login">
              </div>
              <div class="form-group">
                <label for="password-login" class="text-light">Password:</label>
                <input class="form-control form-control-sm entry-field" type="password" id="password-login">
              </div>
              <div class="mt-3">
                <button type="submit" class="btn-primary ms-2 p-1 rounded" style="width: 100px;">Login</button><br>
                <h6 class="mt-2 ms-2 text-light">Not registered? Sign Up please!</h6>

              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!--sign up form-->
    <div class="col-sm-6 col-md-6 mx-auto d-table h-100">
      <div class="text-center mt-2">
        <h2>Sign Up</h2>
        <hr>
      </div>

      <div class="card bg-dark">
        <div class="card-body">
          <div class="mt-sm-4 mx-sm-4">
            <form class="signup-form" id="s-form">
              <div class="form-group pb-2">
                <label for="email-signup" class="text-light">Email:</label>
                <input class="form-control form-control-sm entry-field" type="email" name="email"
                  placeholder="Enter your email" id="email-signup">
              </div>
              <div class="form-group pb-3">
                <label for="name-signup" class="text-light">Username:</label>
                <input class="form-control form-control-sm entry-field" type="text" name="name"
                  placeholder="Enter your username" id="name-signup">
              </div>
              <div class="form-group">
                <label for="password-signup" class="text-light">Password:</label>
                <input class="form-control form-control-sm entry-field" type="password" name="password"
                  placeholder="Enter password" id="password-signup">
              </div>

              <div class="text-center mt-2">
                <button type="submit" class="btn-warning btn-m login-signup-btn">Sign Up!</button>

              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>